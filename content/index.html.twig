                                <h5>Sign up in seconds!</h5>
                             <form action="/register/waitlist" method="get" class="form-inline">
                                <div class="input-append">
                                    <input class="span2" placeholder="Email Address" name="email" type="text">
                                    <button type="submit" class="btn" type="button">Go!</button>
                                </div>
                            </form>
                            </div>
                        </div>

                        <hr class="tall" />



                    </div>
                    </div>
                </div>
{% endblock %}
